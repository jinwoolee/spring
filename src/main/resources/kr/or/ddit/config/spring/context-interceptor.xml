<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.3.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<mvc:interceptors>
		<mvc:interceptor>
			
			<!-- 어떤 url 요청에 대해 해당 interceptor를 실행할지 url mapping 설정 -->
			<mvc:mapping path="/**"/>
			
			<!-- 특정 url 요청에 대해 해당 intercpetor를 미적용 -->
			<!--<mvc:exclude-mapping path=""/>-->
			
			<bean class="kr.or.ddit.interceptor.ProfileInterceptor"/>
		</mvc:interceptor>
		
		<mvc:interceptor>
			<mvc:mapping path="/**" />
			<mvc:exclude-mapping path="/login" />
			<mvc:exclude-mapping path="/excelView" />
			<mvc:exclude-mapping path="/resources/**" />
			<mvc:exclude-mapping path="/css/**" />
			<mvc:exclude-mapping path="/js/**" />
			<mvc:exclude-mapping path="/error/**" />
			<bean class="kr.or.ddit.interceptor.SesseionCheckInterceptor"/>
		</mvc:interceptor>
	</mvc:interceptors>
</beans>
